{
  "mcpServers": {
    "mineflayer-mcp": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--network=host",
        "-v", "/home/ubuntu/mc-mcp/state:/usr/src/app/state",
        "-e", "MC_HOST=localhost",
        "-e", "MC_PORT=25565",
        "-e", "MC_USERNAME=mcp-bot",
        "-e", "MC_AUTH=offline",
        "mc-mcp"
      ]
    }
  }
}
